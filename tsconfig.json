{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/screens/*": ["src/screens/*"],
      "@/core/*": ["src/core/*"],
      "@/store/*": ["src/store/*"],
      "@/plugins/*": ["src/plugins/*"],
      "@/themes/*": ["src/themes/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/services/*": ["src/services/*"],
      "@/types/*": ["src/types/*"],
      "@/locales/*": ["src/locales/*"],
      "@/i18n/*": ["src/i18n/*"]
    }
  }
}
